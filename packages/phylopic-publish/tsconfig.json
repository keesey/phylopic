{
    "compilerOptions": {
        "baseUrl": ".",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "lib": ["esnext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "outDir": "./dist/",
        "paths": {
            "*": ["node_modules/*", "custom_typings/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "typeRoots": ["node_modules/@types", "custom_typings"],
        "types": ["node"]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
