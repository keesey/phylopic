{
    "compilerOptions": {
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "outDir": "dist",
        "paths": {
            "~/*": ["./src/*"]
        },
        "rootDir": "src",
        "strict": true,
        "target": "ESNext"
    },
    "exclude": ["src/**/*.spec.ts"],
    "include": ["src/**/*.ts"],
    "paths": {
        "phylopic-api-models": "."
    }
}
