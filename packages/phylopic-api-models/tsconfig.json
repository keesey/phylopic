{
    "compilerOptions": {
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "incremental": true,
        "lib": ["dom", "esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "outDir": "dist",
        "paths": {
            "~/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": false,
        "strict": true,
        "target": "esnext",
        "typeRoots": ["./node_modules/@types", "./custom_typings"]
    },
    "exclude": ["./src/**/*.spec.ts"],
    "include": ["./src/**/*.ts"]
}
