{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "isolatedModules": true,
        "jsx": "preserve",
        "module": "ESNext",
        "noEmit": true,
        "outDir": "./dist",
        "paths": {
            "~/*": [
                "src/*"
            ]
        },
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ]
    },
    "include": [
        "./pages/**/*.ts",
        "./pages/**/*.tsx",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}