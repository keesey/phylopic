{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "ESNext",
        "noEmit": true,
        "outDir": "dist",
        "paths": {
            "~/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "target": "ES5"
    },
    "display": "Next.js",
    "exclude": ["node_modules"],
    "extends": "./base.json",
    "include": ["pages", "src", "next-env.d.ts"]
}
