{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./base.json",
    "compilerOptions": {
        "allowJs": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "ESNext",
        "noEmit": true,
        "outDir": "dist",
        "paths": {
            "~/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "target": "ES6"
    },
    "include": ["src", "next-env.d.ts"],
    "exclude": ["node_modules"]
}
