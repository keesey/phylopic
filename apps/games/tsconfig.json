{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "~/*": ["./*"]
        },
        "rootDir": ".",
        "module": "esnext",
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "exclude": ["node_modules"],
    "extends": "@phylopic/tsconfig/next.json",
    "include": ["app", "components", "games", "lib", "next-env.d.ts", ".next/types/**/*.ts"]
}
