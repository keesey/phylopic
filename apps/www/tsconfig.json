{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "rootDir": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "@phylopic/tsconfig/next.json",
  "include": [
    "app",
    "components",
    "layout",
    "lib",
    "pages",
    "src",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ]
}
